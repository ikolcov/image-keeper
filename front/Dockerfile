FROM node:7-alpine

WORKDIR /srv/app

COPY package.json /srv/app
COPY yarn.lock /srv/app
RUN yarn install

COPY . /srv/app

ARG PORT=2000
ARG LB_HOST=192.168.99.100:3000
ARG SSO_HOST=192.168.99.100:1000
ARG STORAGE_HOST=192.168.99.100:500
ENV PORT $PORT
ENV REACT_APP_LB_HOST $LB_HOST
ENV REACT_APP_SSO_HOST $SSO_HOST
ENV REACT_APP_STORAGE_HOST $STORAGE_HOST
EXPOSE $PORT

CMD yarn start
